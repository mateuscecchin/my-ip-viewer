{
    "manifest_version": 3,
    "name": "MyIpViewer",
    "version": "1.0",
    "description": "Mostra seu IP atual no canto inferior direito da p√°gina.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://api.ipify.org/*"
    ],
    "homepage_url": "https://github.com/mateuscecchin/my-ip-viewer",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}